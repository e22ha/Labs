<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="195" Width="605" MinWidth="605" MinHeight="195">
    <Grid Margin="0,0,-0.333,-0.333">
        <ComboBox HorizontalAlignment="Left" Height="0" Margin="200,160,0,0" VerticalAlignment="Top" Width="6"/>
        <ComboBox x:Name="Year_choice" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Year_choice_SelectionChanged"/>
        <ComboBox x:Name="Month_choice" HorizontalAlignment="Left" Margin="166,56,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Month_choice_SelectionChanged"/>
        <ComboBox x:Name="Day_Choice" HorizontalAlignment="Left" Margin="332,56,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Day_Choice_SelectionChanged"/>
        <Label x:Name="Year" Content="Год:&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Height="26" Width="49"/>
        <Label x:Name="Mo" Content="Месяц:" HorizontalAlignment="Left" Margin="166,25,0,0" VerticalAlignment="Top" Width="76"/>
        <Label x:Name="day" Content="День:&#xD;&#xA;" HorizontalAlignment="Left" Margin="332,25,0,0" VerticalAlignment="Top"/>
        <Button x:Name="go" Content="Go" HorizontalAlignment="Left" Height="22" Margin="471,56,0,0" VerticalAlignment="Top" Width="110" Click="go_Click"/>
        <TextBlock x:Name="output" HorizontalAlignment="Left" Height="76" Margin="431,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>
